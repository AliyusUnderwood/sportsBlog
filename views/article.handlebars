<div class='container mx-auto flex flex-wrap items-center'>
  <section class='w-full flex flex-col items-center px-3'>
    <article class='flex flex-col betterShadow my-2'>
      <a
        href='#'
        class='opacity-90 hover:opacity-100 transition-opacity duration-[250ms] ease-in-out'
      >
        <img src='{{post.imageUrl}}' />
      </a>
      <div class='bg-offWhite flex flex-col justify-start p-6'>
        <a
          href='#'
          class='text-blue text-sm font-bold uppercase pb-4'
        >{{post.category}}</a>
        <a href='#' class='text-3xl font-bold pb-4'>{{post.title}}</a>
        <p class='text-sm pb-8'>
          By
          <a href='#' class='font-semibold'>{{post.user.name}}</a>, Published on
          {{formatDate post.createdAt}}
        </p>
        <div class='pb-3'>{{{post.content}}}</div>
      </div>
    </article>

    <div class='w-full flex pt-6'>
      {{#if prevPost}}
        <a
          href='/posts/{{prevPost.id}}'
          class='w-1/2 bg-offWhite betterShadow hover:betterShadow-md text-left p-6'
        >
          <p class='text-lg text-blue font-bold flex items-center'><i
              class='fas fa-arrow-left pr-1'
            ></i>
            Previous</p>
          <p class='pt-2'>{{prevPost.title}}</p>
        </a>
      {{/if}}
      {{#if nextPost}}
        <a
          href='/posts/{{nextPost.id}}'
          class='w-1/2 bg-offWhite betterShadow hover:betterShadow-md text-right p-6'
        >
          <p
            class='text-lg text-blue font-bold flex items-center justify-end'
          >Next <i class='fas fa-arrow-right pl-1'></i></p>
          <p class='pt-2'>{{nextPost.title}}</p>
        </a>
      {{/if}}
    </div>

    <div
      class='w-full flex flex-col text-center md:text-left md:flex-row betterShadow bg-offWhite mt-10 mb-10 p-6'
    >
      <div class='w-full md:w-1/5 flex justify-center pb-4'>
        <img
          src='{{post.user.profilePicture}}'
          class='rounded-full h-32 w-32 object-cover'
        />
      </div>
      <div class='flex-1 flex flex-col justify-center'>
        <p class='font-semibold text-2xl'>{{post.user.name}}</p>
        <p class='pt-2'>{{post.user.bio}}</p>
      </div>
    </div>
  </section>
</div>