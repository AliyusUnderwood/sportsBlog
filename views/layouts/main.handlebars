<html lang='en'>
<head>
  <meta charset='UTF-8' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <link rel='stylesheet' href='/css/styles.css' />
  <title>Sporty</title>
</head>
<body class='bg-grayLight'>
  <!-- Top Bar Nav -->
  <nav class='w-full py-4 bg-grayDark betterShadow'>
    <div class='w-full container mx-auto flex flex-wrap items-center justify-around'>
      <nav>
        <ul class='flex items-center justify-between font-bold text-sm text-grayLight bg-none uppercase no-underline'>
          <li class='px-4'><a class='transition-colors hoverUnderline duration-200 px-1' href='/'>Home</a></li>
          <li class='px-4'><a class='transition-colors hoverUnderline duration-200 px-1' href='/api/posts'>Posts</a></li>
          {{#if loggedIn}}
            <li class='px-4'><a class='transition-colors hoverUnderline duration-200 px-1' href='/dashboard'>Dashboard</a></li>
            <li class='px-4'><a class='transition-colors hoverUnderline duration-200 px-1' id="logout" href='/logout'>Logout</a></li>
          {{else}}
            <li class='px-4'><a class='transition-colors hoverUnderline duration-200 px-1' href='/login'>Login</a></li>
            <li class='px-4'><a class='transition-colors hoverUnderline duration-200 px-1' href='/signup'>Signup</a></li>
          {{/if}}
        </ul>
      </nav>
    </div>
  </nav>

  <!-- Text Header -->
  <header class='w-full container mx-auto'>
    <div class='flex flex-col items-center py-10'>
      <a class='font-bold text-grayDark uppercase opacity-90 hover:opacity-100 transition-all duration-200 ease-in-out text-5xl pb-2' href='/'>
        Sporty Blog
      </a>
      <p class='text-lg text-grayDark'>
        An awesome boot camp project by four engineers!
      </p>
      <p>{{message}}</p>
    </div>
  </header>

  {{{body}}}
      {{#if loggedIn}}
      <script src='/js/logout.js'></script>
    {{/if}}
</body>
</html>