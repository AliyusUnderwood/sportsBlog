<div class='container mx-auto flex flex-wrap py-12'>
  <section class='w-full md:w-2/3 flex flex-col items-center px-3'>
    <form id='new-post-form' class='w-full max-w-lg'>
      <div class='flex flex-wrap -mx-3 mb-6'>
        <div class='w-full px-3'>
          <label class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' for='post-title'>
            Title
          </label>
          <input class='appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' id='post-title' type='text' name='post-title' placeholder='Enter the post title' required>
        </div>
      </div>
      <div class='flex flex-wrap -mx-3 mb-6'>
        <div class='w-full px-3'>
          <label class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2' for='post-body'>
            Content
          </label>
          <textarea class='appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' id='post-body' name='post-body' placeholder='Enter the post content' rows='10' required></textarea>
        </div>
      </div>
      <div class='flex justify-end'>
        <button class='bg-blue hover:bg-blueLight text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' type='submit'>
          Create Post
        </button>
      </div>
    </form>
  </section>
  {{>sidebar}}
</div>

<script src='../public/js/newPost.js'></script>